    <script>
        function wrapLabel(str, maxWidth) {
            const words = str.split(' ');
            let lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + ' ' + words[i]).length > maxWidth) {
                    lines.push(currentLine);
                    currentLine = words[i];
                } else {
                    currentLine += ' ' + words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        const longLabel1 = 'Riqueza del 0.2% de la poblaci√≥n';
        const longLabel2 = 'Riqueza del 99.8% restante';
        
        const inequalityData = {
            labels: [
                wrapLabel(longLabel1, 16),
                wrapLabel(longLabel2, 16)
            ],
            datasets: [{
                label: 'Distribuci√≥n de la Riqueza en M√©xico',
                data: [60, 40],
                backgroundColor: [
                    '#DC2626', 
                    '#3B82F6'  
                ],
                borderColor: [
                    '#FFFFFF',
                    '#FFFFFF'
                ],
                borderWidth: 2
            }]
        };

        const inequalityConfig = {
            type: 'doughnut',
            data: inequalityData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
