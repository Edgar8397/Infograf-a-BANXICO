                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            }
                        }
                    }
                }
            },
        };

        const inequalityChart = new Chart(
            document.getElementById('inequalityChart'),
            inequalityConfig
        );
    </script>
